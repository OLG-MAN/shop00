<table class="table">
	<tr>
		<th></th>
		<th>Product</th>
		<th>Price</th>
		<th>Quantity</th>
		<th>All price</th>
		<th></th>
	</tr>

	{% for item in order.items %}
		<tr>
			<td>{{ loop.index }}</td>
			<td>{{ item.name }}</td>
			<td>{{ item.price / 100 }}</td>
			<td>
				<input type="number" value="{{ item.count }}"
					   data-url="{{ path('order_set_count', {'id': item.id}) }}"
					   class="cart-item-count js-cart-item-count"
				>
			</td>
			<td>{{ item.amount / 100 }}</td>
			<td>
				<a href="{{ path('order_delete_item', {'id': item.id}) }}" class="js-cart-remove-item">
					<i class="fas fa-trash-alt"></i>
				</a>
			</td>
		</tr>
	{% endfor %}

	<tr>
		<th></th>
		<th colspan="3">Total</th>
		<th>{{ order.amount / 100 }}</th>
	</tr>
</table>
